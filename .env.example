# Save2740 Frontend Environment Variables Template
# Copy this file to .env.local for local development
# For Vercel deployment, set these in Vercel Dashboard → Settings → Environment Variables

# ============================================
# BACKEND API URL (REQUIRED)
# ============================================
# Local Development:
# NEXT_PUBLIC_API_URL=http://localhost:5000

# Vercel Production (Update with your actual backend URL):
# NEXT_PUBLIC_API_URL=https://your-backend.vercel.app

NEXT_PUBLIC_API_URL=http://localhost:5000

# ============================================
# APPLICATION SETTINGS
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ============================================
# PAYMENT PROCESSING (Optional)
# ============================================
# Stripe Public Key (Safe to expose in frontend)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
FEATURE_STRIPE_ENABLED=false
FEATURE_DWOLLA_ENABLED=false
FEATURE_TWO_FACTOR_AUTH=false

# ============================================
# ANALYTICS (Optional)
# ============================================
# Vercel Analytics is enabled by default if @vercel/analytics is installed
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id
